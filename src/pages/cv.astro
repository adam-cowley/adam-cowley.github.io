<style>
	/* Print-specific styles */
	@media print {
		/* Hide navigation and other non-essential elements */
		nav, footer, .print\:hidden {
			display: none !important;
		}

		/* Ensure the print message appears on each page */
		@page {
			margin-bottom: 2cm;
		}

		/* Add page break control */
		section {
			break-inside: avoid;
		}

		/* Ensure the layout works well in print */
		.flex {
			display: block !important;
		}

		.md\:w-3\/4, .md\:w-1\/4 {
			width: 100% !important;
		}
	}
</style> 